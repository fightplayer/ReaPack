desc:MIDI Data Display

@init
note = 0; // 初期化ノート変数

@block
// MIDI入力を処理
while (midirecv(offset, msg1, msg23) ? (
    msg1 == $x90 ? ( // ノートオンメッセージの場合
        note = msg23 & 0x7F; // ノート番号を取得
    );
);

// GUIの更新
gfx_mode = 1;
gfx_clear = 0;

@slider
// スライダーセクション（ここではスライダーを使わない）

@gfx
gfx_x = 10;
gfx_y = 10;
gfx_printf("MIDI Note: %d", note);